
{
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "YOUR_NEW_APP_HOSTING_BACKEND_ID",
          "region": "YOUR_NEW_APP_HOSTING_REGION"
        }
      }
    ]
  },
  "apphosting": {
    "backendId": "YOUR_NEW_APP_HOSTING_BACKEND_ID",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
